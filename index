<body>

  <h1>🍿𝔽𝕝𝕚𝕔𝕜ℙ𝕚𝕔𝕜</h1>
  <div class="notice">
    <strong>Heads up!</strong> You can copy your profile below or download it directly.
  </div>

  <pre id="profileDisplay">{ loading... }</pre>
  <button onclick="downloadProfile()">⬇️ Download FlickPick_Profile.json</button>

  <script>
    let formattedJson = "{}";

    function getQueryParam(name) {
      return new URLSearchParams(window.location.search).get(name);
    }

    function downloadProfile() {
      const blob = new Blob([formattedJson], { type: "application/json" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = "FlickPick_Profile.json";
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    }

    (function init() {
      const raw = getQueryParam("data");
      if (!raw) {
        document.getElementById("profileDisplay").textContent =
          "⚠️ No profile data found in the URL.";
        return;
      }

      try {
        const obj = JSON.parse(decodeURIComponent(raw));
        formattedJson = JSON.stringify(obj, null, 2);
        document.getElementById("profileDisplay").textContent = formattedJson;
      } catch (e) {
        document.getElementById("profileDisplay").textContent =
          "⚠️ Failed to parse JSON: " + e.message;
      }
    })();
  </script>

</body>
